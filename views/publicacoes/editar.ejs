<%- include('../header') %>

<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input type="text" name="titulo" class="form-control" id="titulo"  placeholder="Digite o titulo..." value="<%=  publicacao.titulo %>">
    </div>
    <div class="form-group">
        <label for="conteudo">Conteudo</label>
        <textarea name="conteudo" class="form-control" id="conteudo"  placeholder="Informe o conteudo..."><%=  publicacao.conteudo%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>